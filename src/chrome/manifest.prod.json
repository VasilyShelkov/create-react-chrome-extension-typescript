{
  "version": "0.0.1",
  "name": "create-react-chrome-extension-typescript",
  "manifest_version": 2,
  "description": "Example for create-react-chrome-extension-typescript-boilerplate",
  "browser_action": {
    "default_title": "React Chrome Extension Typescript",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [ "contextMenus", "tabs", "storage" ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
